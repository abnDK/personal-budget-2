html 
  head
    title='Budget'
  body
    link(rel="stylesheet" href="/css/budget.css")
    link(rel="stylesheet" href="/css/normalize.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css", integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e", crossorigin="anonymous")
    

    .grid-container
        .grid-header="Header"

            

        .transactions-container
            .transactions-header
                .transactions-header-title="Transactions - "
                .bi.bi-dash-circle= " remove  row"
                #addTransRow.bi.bi-plus-circle= " add new row"
                
            .transaction-rows-table 
                .transaction-rows-title
                    .transaction-date="Day"
                    .transaction-amount="Amt"
                    .transaction-description="Name" 
                    .transaction-category="Category"
                .transaction-rows

                
                

        .budget-container
            .budget-header
                .budget-title#budget_id(data-budget_id=4)="Budget and Report - "
            .budget-subheader
                .start-date= "Start date: dd-mm-yyyy"
                .budget-sum= "Budget sum:"
                .button-add#addRow(hidden=true)= "+"
                .button-edit#editSave= "Edit"

            .budget-rows
                
                            
                    
                    
        .grid-footer="Footer"

