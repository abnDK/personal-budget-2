html 
  head
    title='Add transaction'
  body
    link(rel="stylesheet" href="/css/add_transaction.css")
    include header.pug
    .content
        .add-trans
            .title New Transaction
            form(action="/transactions", method='POST')
                input(name='amount', value='', type='number', placeholder='Amount')
                input(name='name', value='', type='text', placeholder='Description')
                input(name='date', value='', type='date')
                select(name='category_id')
                    each category in categories
                        option(value=category.id) #{category.id}: #{category.name}
                input(value='Submit', type='submit').submit

        if prev_added_transaction
          .prev_added_transaction
            .title Latest added
            .amount Kr: #{prev_added_transaction.amount} 
            .name=prev_added_transaction.name
            .category Cat: #{prev_added_transaction.category_id}
            //.date=prev_added_transaction.date 


    include footer.pug